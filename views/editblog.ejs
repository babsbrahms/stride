<%- include partials/head.ejs %>

<body>
    <!--::header part start::-->
    <%- include partials/header.ejs %>
    <!-- Header part end-->

    <!-- breadcrumb start-->
    <section class="breadcrumb breadcrumb_bg align-items-center">
        <div class="container">
            <div class="row align-items-center justify-content-between">
                <div class="col-sm-6">
                    <div class="breadcrumb_tittle text-left">
                        <h2>Edit</h2>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="breadcrumb_content text-right">
                        <p>Home<span>/</span>Edit Post</p>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- breadcrumb start-->

  <!-- ================ contact section start ================= -->
  <br />
  <br/>
  <br />
  <br/>
  <div class="d-flex flex-row justify-content-center">
    <h2>Edit Blog</h2>
  </div>
  <br />
  <br/>
  <section id="main mt2">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <form id="createPost" action="/cms/edit-post" method="post" enctype="multipart/form-data">
                    <input type="hidden" name="id" value="<%=blog._id%>">
                    <div class="form-group">
                        <label>Title</label>
                        <input required type="text" name="title" class="form-control" placeholder="blog title" value="<%=blog.title %>">
                    </div>
<!-- 
                    <div class="form-group">
                            <label>Author</label>
                            <input required type="text" name="author" class="form-control" placeholder="blog author" value="<%=blog.author %>">
                    </div> -->
                    <input type="hidden" name="author" value="biola ibrahim">

                    <div class="form-group">
                        <label>Category</label>
                        <input required type="text" name="category" class="form-control" placeholder="blog category" value="<%=blog.category %>">

                        <!-- <select required class="form-control" name="category">
                            <option value="music">Music</option>
                            <option value="comedy">Comedy</option>
                            <option value="community">Community</option>
                            <option value="sport">Sport</option>
                            <option value="education">Education</option>
                        </select> -->
                    </div>
<!-- 
                    <div class="form-group">
                        <label>Date</label>
                        <input type="hidden" name="date" class="form-control" value="<%=blog.date %>">
                    </div> -->

                    <div class="form-group">
                        <label>Poster</label>
                        <br/>
                        <img id="poster-img" src="<%=blog.poster %>" />
                        <input type="hidden" name="oldPoster" value="<%=blog.poster %>" />
                        <input type="file" name="poster" accept=".jpeg, .jpg, .png, .gif" class="form-control" placeholder="add images" multiple>
                    </div>

                    <div class="form-group">
                        <label>Body</label>
                        <textarea required name="body" class="form-control" placeholder="blog body">
                            <%= blog.body %>
                        </textarea>
                    </div>

                    <div class="d-flex flex-row justify-content-end">
                        <input type="submit" class="btn btn-success" value="submit">
                    </div>
                </form>
            </div>
        </div>
    </div>
</section> 
<br />
<br/>
  <!-- ================ contact section end ================= -->

  <!-- social_connect_part part start-->
  <!-- social_connect_part part end-->

   <!-- footer part start-->
   <%- include partials/footer.ejs %>
    <!-- footer part end-->
    <script type="text/javascript" src="/ckeditor/ckeditor.js"></script> 

    <script type="text/javascript">
        //we have name="body" in the textarea tag
            CKEDITOR.replace('body');
    </script>

  <script>

    let form = document.getElementById('createPost')
    let img = document.getElementById('poster-img');
    let poster = form['poster'];

    poster.onchange = function(e) {

        img.setAttribute('src', URL.createObjectURL(e.target.files[0]))
          
    }
  
  </script>
</body>

</html>