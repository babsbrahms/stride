<%if((msg.length > 0)|| (errors.length > 0)){%><div class="alert <%if(msg.length > 0){%>alert-success<%}else{%>alert-error<%}%> alert-dismissible fade show" role="alert">
    <%if(msg){%>
        <%=msg%>
    <%}%>   
    <%if(errors){%>
        <%errors.forEach(function(error) {%>
            <ul class="list-group">
                <li class="list-group-item list-group-danger"><%=error.msg%></li>
            </ul>
        <%})%>
    <%}%>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
</div><%}%>